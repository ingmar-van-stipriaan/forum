<div class="row">
  <div class="col-xs-12">
    <h1 class="page-header">Topics</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <%= link_to "Nieuwe Topic", new_topic_path, :user_id => current_user.id, :class => "btn btn-success" %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <table class="table table-striped table-border">
      <thead>
        <tr>
          <th>Titel</th>
          <th>Aantal berichten</th>
          <th>Aangemaakt op</th>
          <th>Laaste bericht</th>
          <th>Aangemaakt door</th>
        </tr>
      </thead>
      <tbody>
        <% @topics.each do |topic| %>
          <tr>
            <td><%= link_to topic.title, topic_path(topic.id) %></td>
            <td><%= topic.messages.count %></td>
            <td><%= topic.created_at %></td>
            <td><%= topic.updated_at %></td>
            <td><%= topic.user.email if topic.user %></td>
            <td>
              <% if topic.user.id == current_user.id %>
                <%= topic.edit_link %>
                <%= topic.delete_link %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
