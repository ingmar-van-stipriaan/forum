<div class="row">
  <div class="col-xs-12">
    <h1 class="page-header">Topics</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <%= link_to "Nieuwe Topic", new_topic_path, :class => "btn btn-success" %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <table class="table table-striped table-border">
      <thead>
        <tr>
          <th>Title</th>
          <th>Aantal berichten</th>
          <th>Created at</th>
          <th>Last message</th>
        </tr>
      </thead>
      <tbody>
        <% @topics.each do |topic| %>
          <tr>
            <td><%= topic.title %></td>
            <td><!-- show messages count --></td>
            <td><%= topic.created_at %></td>
            <td><%= topic.updated_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
