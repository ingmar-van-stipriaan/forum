<div class="row">
  <div class="col-xs-12">
    <%= link_to "Terug", topics_path, :class => "btn btn-default" %>
  </div>
</div>

<div class="row">
  <div class="col-xs-6">
    <h1 class="page-header">Nieuwe Topic</h1>
    <%= form_for @topic, { :action => "update", :user_id => current_user.id } do |f| %>
    <%= f.hidden_field :user_id %>
    <div class="form-group">
      <%= f.label :title, "Titel" %>
      <%= f.text_field :title, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description, "Omschrijving" %>
      <%= f.text_area :description, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Topic aanmaken", :data => { :disable_with => 'Topic wordt aangemaakt...' }, :class => "btn btn-default"  %>        
   </div>
   <% end %>
 </div>
</div>