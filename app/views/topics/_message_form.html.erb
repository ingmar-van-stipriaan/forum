<div class="row">
  <div class="col-xs-6">
    <%= form_for([ @topic, @message ]) do |f| %>
    <%= f.hidden_field :topic_id %>
    <div class="form-group">
      <%= f.label :content, "Bericht" %>
      <%= f.text_area :content, :class => "form-control wysihtml5" %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", :class => "btn btn-success" %>
    </div>
    <% end %>

  </div>
</div>
